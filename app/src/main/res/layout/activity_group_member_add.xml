<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GroupMemberAddActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorGray"
                android:text="아이디 :  "
                android:textSize="25dp"
                android:id="@+id/memberNameTextView"
                />

            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/memberNameTextView"
                android:id="@+id/memberNameEditText"
                />


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/memberValidateButton"
                android:layout_toRightOf="@id/memberNameEditText"
                android:layout_gravity="center"
                android:text="찾기"
                />

        </RelativeLayout>


        //아직은 아니지만, 나중에 멤버를 미리 확인할 수 있도록하자. 동적으로 추가해야한다.






    </LinearLayout>


</android.support.constraint.ConstraintLayout>