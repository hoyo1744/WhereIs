<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">
    
    
    <TextView
        android:drawableLeft="@drawable/ic_help_black_24dp"
        android:drawableStart="@drawable/ic_help_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="애플리케이션정보"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/colorPrimaryDark"
        android:padding="5dp"
        android:textSize="17dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:textStyle="bold"
        />

    <TextView
        android:drawableLeft="@drawable/ic_build_black_24dp"
        android:drawableStart="@drawable/ic_build_black_24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" 애플리케이션 버전 : 0.1 Ver"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/colorWhite"
        android:background="@color/colorPrimary"
        android:padding="5dp"
        android:textSize="17dp"
        android:textStyle="bold"
        />

    <TextView
        android:drawableLeft="@drawable/ic_security_black_24dp"
        android:drawableStart="@drawable/ic_security_black_24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" 개발자 : hoyo1744"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/colorWhite"
        android:background="@color/colorPrimary"
        android:padding="5dp"
        android:textSize="17dp"
        android:textStyle="bold"
        />

    <TextView
        android:drawableLeft="@drawable/ic_public_black_24dp"
        android:drawableStart="@drawable/ic_public_black_24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" 개발자 블로그 : https://blog.naver.com/hoyo1744"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/colorWhite"
        android:background="@color/colorPrimary"
        android:padding="5dp"
        android:textSize="17dp"
        android:textStyle="bold"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <TextView
            android:drawableLeft="@drawable/ic_assignment_ind_black_24dp"
            android:drawableStart="@drawable/ic_assignment_ind_black_24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" 개발자 소개"
            android:textColor="@color/colorWhite"
            android:background="@color/colorPrimary"
            android:padding="5dp"
            android:textSize="17dp"
            android:textStyle="bold"
            />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:isScrollContainer="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">

                    <com.example.hoyo1.whereis.Common.CircleImageView
                        android:layout_height="80dp"
                        android:layout_width="80dp"
                        android:src="@drawable/ic_person_black_24dp"
                        app:civ_border_color="@color/colorWhite"
                        app:civ_border_width="2dp"
                        tools:ignore="VectorDrawableCompat" />
                    
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="엄호용"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="17dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="hoyo1744@naver.com"
                            android:textStyle="bold"
                            android:textColor="@color/colorBlack"
                            android:textSize="15dp"/>



                    </LinearLayout>




                </LinearLayout>



            </LinearLayout>



        </ScrollView>


    </LinearLayout>





</LinearLayout>