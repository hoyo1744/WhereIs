<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorGray"
            android:text="카테고리 헤더: "
            android:textColor="@color/colorBlack"
            android:textSize="25dp"
            android:id="@+id/subGroupCategoryHeaderTextView"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/subGroupCategoryHeaderTextView"
            android:id="@+id/subGroupCategoryHeaderEditText"
            />
    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorGray"
            android:text="카테고리 내용 : "
            android:textColor="@color/colorBlack"
            android:textSize="25dp"
            android:inputType="number"
            android:id="@+id/subGroupCategoryTextView"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/subGroupCategoryTextView"
            android:hint="'#'으로 구분해주세요."
            android:textColorHint="@color/colorPrimary"
            android:id="@+id/subGroupCategoryEditText"
            />

    </RelativeLayout>



</LinearLayout>