<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">


            //스테틱 그룹장 :

            <TextView
                android:id="@+id/groupLeaderTextView"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_marginTop="20dp"
                android:layout_toLeftOf="@id/groupLeaderImageView"
                android:text="그룹장 : "
                android:textSize="15dp"
                android:textStyle="normal" />

            //그룹리더프로필이미지

            <ImageView
                android:id="@+id/groupLeaderImageView"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="20dp"
                android:layout_toLeftOf="@+id/groupLeaderNameTextView"
                app:srcCompat="@drawable/ic_person_black_24dp" />
            //그룹리더프로필이름

            <TextView
                android:id="@+id/groupLeaderNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:text="그룹장이름"
                android:textSize="15dp"
                android:textStyle="normal" />


        </RelativeLayout>


        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                //그룹멤버 그리드뷰(동적생성)

                <GridView
                    android:id="@+id/gridView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numColumns="6"></GridView>
            </FrameLayout>
        </HorizontalScrollView>

    </LinearLayout>
        </LinearLayout>









</LinearLayout>