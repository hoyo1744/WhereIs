<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="10dp">

        //배경
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/colorSkyBlue" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">
        //그룹프로필이미지
        <ImageView
            android:id="@+id/imageList"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentLeft="true"
            app:srcCompat="@drawable/ic_person_black_24dp" />
            //그룹프로필이름
            <TextView
                android:id="@+id/textList"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/imageList"
                android:text="그룹이름"
                android:textSize="25dp"
                android:textStyle="bold" />
            //스테틱 그룹장 :
            <TextView
                android:id="@+id/leaderTextList"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_toLeftOf="@id/leaderImageList"
                android:layout_marginTop="20dp"
                android:text="그룹장 : "
                android:textSize="15dp"
                android:textStyle="normal" />

            //그룹리더프로필이미지
            <ImageView
                android:id="@+id/leaderImageList"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="20dp"
                android:layout_toLeftOf="@id/leaderNameTextList"
                app:srcCompat="@drawable/ic_person_black_24dp" />
            //그룹리더프로필이름
            <TextView
                android:id="@+id/leaderNameTextList"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:text="그룹장이름"
                android:textSize="15dp"
                android:textStyle="normal" />


        </RelativeLayout>
    </FrameLayout>











</LinearLayout>